{
  "name": "pdf-generator-microservice",
  "version": "1.0.0",
  "description": "TypeScript PDF Generator for ERPNext/Frappe integration",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "build:client": "cd client && npm run build",
    "build:all": "npm run build && npm run build:client",
    "start": "node dist/server.js"
  },
  "keywords": ["pdf", "generator", "erpnext", "frappe"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pdf-lib": "^1.17.1",
    "fs-extra": "^11.2.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/fs-extra": "^11.0.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}
